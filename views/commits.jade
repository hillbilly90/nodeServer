extends layout

block content
  div(ng-controller="CommitCtrl")
    h1 {{commits[0].commit.author.name}}'s Github Commits
    img(ng-src="{{commits[0].author.avatar_url}}")
    h2 {{commits[0].commit.author.name}} has {{commits.length}} commits
    ul
      li(ng-repeat="commit in commits") {{commit.commit.message}}
